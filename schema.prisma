datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int    @id @default(autoincrement())
  books Book[]
}

model Book {
  id        Int      @id @default(autoincrement())
  author    String
  title     String
  type      String
  status    String
  yearRead  Int
  genre     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}
